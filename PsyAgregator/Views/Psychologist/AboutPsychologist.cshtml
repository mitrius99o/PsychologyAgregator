@model PsyAgregator.Models.Psychologist
@{
    ViewData["Title"] = "AboutPsychologist";
}

<h1>AboutPsychologist</h1>
    <div class="container">
        <div class="photo-index-card-details">

            @if (Model.PhotoFileName != null)
            {
                <div class="photo-display">
                    <img class="photo-display-img" src="~/images/@Model.PhotoFileName" alt="Sample Image" />
                </div>
            }
            <div>
                <p class="display-label">
                    @Html.DisplayNameFor(model => model.FirstName)
                </p>
                <p class="display-field">
                    @Html.DisplayFor(model => model.FirstName)
                </p>
                <br />
            </div>
            <div>
                <p class="display-label">
                    @Html.DisplayNameFor(model => model.MidName)
                </p>
                <p class="display-field">
                    @Html.DisplayFor(model => model.MidName)
                </p>
                <br />
            </div>
            <div>
                <p class="display-label">
                    @Html.DisplayNameFor(model => model.LastName)
                </p>
                <p class="display-field">
                    @Html.DisplayFor(model => model.LastName)
                </p>
                <br />
            </div>
            <div>
                <p class="display-label">
                    @Html.DisplayNameFor(model => model.Email)
                </p>
                <p class="display-field">
                    @Html.DisplayFor(model => model.Email)
                </p>
                <br />
            </div>
            <div>
                <a asp-action="GetPsychologistList">Назад к списку специалистов</a>
            </div>
        </div>
    </div>

