<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>PsyсhologySky</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #DCB8A8 ">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="/images/icn.png" width="45" height="36">
                Вира
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="@Url.Action("Index", "Home")">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Importance", "Home")">О важном</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AboutTherapy", "Home")">О психотерапии</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("GetPsychologistList", "Psychologist")">Каталог специалистов</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Test", "Home")">Тестирование</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AboutUs", "Home")">О нас</a>
                    </li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                       <li class="nav-item">
                           <a class="nav-link" style="display: inline-block;" href="@Url.Action("Login", "Account")">

                               Вход в личный кабинет
                               <img src="/images/icn2.png" width="30" height="30" style="display: inline-block;">
                           </a>
                       </li>
                    }
                    else
                    {
                       <li class="nav-item">
                           <a class="nav-link" style="display: inline-block;" href="@Url.Action("Logout", "Account")">
                               Выход из личного кабинета
                               <img src="/images/icn2.png" width="30" height="30" style="display: inline-block;">
                           </a>
                       </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="content">
        @RenderBody()
    </div>
    <text>Все права защищены. Vira</text>
    @RenderSection("Scripts", false)
</body>
</html>
